#!/bin/bash

# OIAI Edu macOS Launcher
# This is a placeholder for the actual macOS build
# In a real scenario, this would be inside a .app bundle

APP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
APP_NAME="OIAIEdu"

echo "======================================="
